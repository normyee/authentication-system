generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String
  verified  Boolean @default(false) 
  lists     List[]  
}

model List {
  id      Int      @id @default(autoincrement())
  name    String
  items   String[] 
  userId  Int
  user    User     @relation(fields: [userId], references: [id])
}
